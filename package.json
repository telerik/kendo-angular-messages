{
  "name": "@progress/kendo-angular-messages",
  "version": "0.0.0-semantically-released",
  "description": "Localization messages - Kendo UI for Angular",
  "main": "index.js",
  "scripts": {
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "lint": "gulp lint"
  },
  "bin": {
    "kendo-translate": "./bin/kendo-translate.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/telerik/kendo-angular-messages.git"
  },
  "author": "Progress",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/telerik/kendo-angular-messages/issues"
  },
  "homepage": "https://github.com/telerik/kendo-angular-messages#readme",
  "devDependencies": {
    "cz-conventional-changelog": "^1.2.0",
    "ghooks": "^2.0.0",
    "gulp": "^3.9.1",
    "gulp-yaml-validate": "^1.0.2",
    "semantic-release": "^4.0.0",
    "validate-commit-msg": "^2.11.1"
  },
  "dependencies": {
    "cheerio": "^0.22.0",
    "data.task": "^3.1.1",
    "glob": "7.1.1",
    "js-yaml": "^3.7.0",
    "ramda": "^0.23.0",
    "xlf-translate": "^2.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    }
  },
  "publishConfig": {
    "registry": "https://registry.npm.telerik.com"
  }
}
